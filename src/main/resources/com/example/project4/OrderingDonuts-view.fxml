<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project4.OrderingDonutsController">
   <children>
      <Label layoutX="200.0" layoutY="14.0" text="Ordering Donuts">
         <font>
            <Font name="Lucida Handwriting Italic" size="34.0" />
         </font>
      </Label>
      <Label layoutX="36.0" layoutY="118.0" prefHeight="30.0" prefWidth="88.0" text="Donut Type">
         <font>
            <Font name="Gill Sans MT Condensed" size="24.0" />
         </font>
      </Label>
      <Label layoutX="36.0" layoutY="173.0" prefHeight="30.0" prefWidth="88.0" text="Flavor">
         <font>
            <Font name="Gill Sans MT Condensed" size="24.0" />
         </font>
      </Label>
      <ChoiceBox fx:id="donutTypes" layoutX="150.0" layoutY="121.0" onMouseClicked="#setTypeChoiceBox" prefWidth="150.0" />
      <ChoiceBox fx:id="donutFlavors" layoutX="150.0" layoutY="175.0" onMouseClicked="#setFlavorChoiceBox" prefWidth="150.0" />
      <Label layoutX="36.0" layoutY="226.0" prefHeight="30.0" prefWidth="88.0" text="Quantity">
         <font>
            <Font name="Gill Sans MT Condensed" size="24.0" />
         </font>
      </Label>
      <ChoiceBox fx:id="donutQuantity" layoutX="150.0" layoutY="228.0" onMouseClicked="#setQuantityChoiceBox" prefHeight="25.0" prefWidth="50.0" />
      <ListView fx:id="orderList" layoutX="375.0" layoutY="96.0" prefHeight="184.0" prefWidth="191.0" />
      <Label layoutX="80.0" layoutY="355.0" text="sub-total">
         <font>
            <Font name="Gill Sans MT" size="19.0" />
         </font>
      </Label>
      <TextField fx:id="subtotal" editable="false" layoutX="185.0" layoutY="354.0" prefHeight="23.0" prefWidth="150.0" text="0.00" />
      <Button layoutX="480.0" layoutY="353.0" mnemonicParsing="false" onAction="#donutAddToOrder" text="Add to Order">
         <font>
            <Font name="Gill Sans MT" size="15.0" />
         </font>
      </Button>
      <Button layoutX="80.0" layoutY="284.0" mnemonicParsing="false" onAction="#addToListView" text="Add to List">
         <font>
            <Font name="Gill Sans MT" size="15.0" />
         </font>
      </Button>
      <ImageView fitHeight="96.0" fitWidth="183.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/donut.jpg" />
         </image>
      </ImageView>
      <Button layoutX="403.0" layoutY="286.0" mnemonicParsing="false" onAction="#removeSelected" text="Remove Selected Item">
         <font>
            <Font name="Gill Sans MT" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
